<% include ../partials/header %>
<% include ../partials/navigation %>
<header class="masthead bg-primary text-white text-center">
  <div class = "container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
          <h1 class="">Edit</h1>

          <form action="/blog/<%=catagory%>/<%=post.title%>/edit?_method=PUT" method="POST">
            <h1 class="" name ="title"><%=post.title%>:</h1>
            <div class="form-group">
                <label for="imgsource">Image Link:</label>
                <input class="form-control" id="imgsource" type="text" placeholder="Image Link" name ="imgsource" value="<%=post.imgsource%>">
            </div>

            <div class="form-group">
                <label for="quote">Quote:</label>
                <textarea class="form-control" id="quote" rows="2" name ="quote" ><%=post.quote%></textarea>
            </div>

            <div class="form-group">
                <label for="text">Text</label>
                <textarea class="form-control" id="text" rows="5" name ="blogText"><%=post.text%></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
      </div>
    </div>
  </div>
</header>
