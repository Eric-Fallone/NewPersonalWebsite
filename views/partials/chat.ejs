<!--chat box-->
<div class="chat position-fixed">
  <div id="chatbox-holder" class="container chat-box">
    <div id="chatbox" class="row">
      <div class="col chat-icon">
        <i class="far fa-comment fa-2x"></i>
      </div>
    </div>
  <% if(currentUser){ %>
      <a id="username" ><%= currentUser.username %></a>
      <a href="/logout">Logout</a>

      <div>
          <ul class="list-group messages" id="footer_messages"></ul>
      </div>
      <div>
          <form id="footer_message_input" class="" action="">
            <input id="footer_message_input_m" autocomplete="off" />
            <button>Send</button>
          </form>
      </div>

  <% }else{ %>

    <div class="container" style="max-width: 320px">
      <p style="text-align: center" class="lead">Login to chat</p>

      <form action="/loginOrRegister" method="post">
          <div class="form-group">
              <input class="form-control" type="text" name="username" placeholder="username">
          </div>
          <div class="form-group">
              <input class="form-control" type="password" name="password" placeholder="password">
          </div>
          <div class="form-group" style="text-align: center">
              <button class="btn btn-lg background_orange_color text-white" name="action" value="login" >Login</button>
          </div>
          <div class="form-group" style="text-align: center">
              <button class="btn btn-lg background_orange_color text-white" name="action" value="register" >Register</button>
          </div>
      </form>
    </div>

    <% } %>
    </div>
</div>
